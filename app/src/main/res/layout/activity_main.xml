<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/selectedTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.beziercurvebottomnavigation.widget.BezierCurveBottomNavigation
        android:id="@+id/bottomNav2"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:backgroundColor="@color/blue"
        app:selectedIconColor="@color/white"
        app:bezierCurveHeight="50dp"
        app:bezierInnerHeight="20dp"
        app:layout_constraintBottom_toBottomOf="parent" />


    <com.example.beziercurvebottomnavigation.widget.BezierCurveBottomNavigation
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:backgroundColor="@color/blue"
        app:layout_constraintTop_toTopOf="parent"
        app:selectedIconColor="@color/white" />

    <com.example.beziercurvebottomnavigation.widget.BezierCurveBottomNavigation
        android:id="@+id/bottomNav3"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:backgroundColor="@color/blue"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/bottomNav"
        app:selectedIconColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>